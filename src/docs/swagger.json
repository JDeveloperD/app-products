{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Nombre de tu API",
    "description": "Descripción de tu API"
  },
  "basePath": "/api/v1",
  "schemes": ["http", "https"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": ">-\n Ingresa el token con `Bearer: ` prefix, e.g. \"Bearer abcde12345\"."
    }
  },
  "paths": {
    "/users/sign-in": {
      "post": {
        "summary": "Iniciar sesión",
        "description": "Permite a los usuarios iniciar sesión en la aplicación.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Auth"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso."
          },
          "401": {
            "description": "Credenciales inválidas."
          },
          "500": {
            "description": "Error del servidor."
          }
        }
      }
    },
    "/users": {
      "get": {
        "security": [
          {
            "Bearer": []
          }
        ],
        "summary": "Obtiene todos los usuarios",
        "responses": {
          "200": {
            "description": "Lista de usuarios obtenida correctamente"
          },
          "401": {
            "description": "Requiere autenticación"
          },
          "403": {
            "description": "Necesita permisos de administrador"
          }
        }
      }
    }
  },
  "definitions": {
    "Auth": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "Email del usuario",
          "example": "dev@gmail.com"
        },
        "password": {
          "type": "string",
          "description": "Contraseña del usuario",
          "example": "password213"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "ID del usuario",
          "example": "12esfsdfsdfdsfsdf4324w2432s"
        },
        "email": {
          "type": "string",
          "description": "Correo electrónico del usuario",
          "example": ""
        },
        "password": {
          "type": "string",
          "description": "Contraseña del usuario"
        }
      }
    }
  }
}
